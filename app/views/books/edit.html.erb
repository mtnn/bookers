<h1>Editing Book</h1>
<%= form_with model:@book, local: true do |f| %>
<div class="edit-content">
  <div class="field">
    <label>Title</label>
    <%= f.text_field :title %>
  </div>
  <div>
    <label>Body</label>
    <%= f.text_area :body %>
  </div>
</div>
  <div class="action">
    <%= f.submit 'Update Book' %>
  </div>

<% end %>


